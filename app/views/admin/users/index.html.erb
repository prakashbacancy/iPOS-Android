<section class="content-wrapper">
  <div class="content">
    <div class="add-item-btn mb-4">
      <%#= link_to 'Add New Customer', new_customer_path, class: "btn btn-admin" %>
    </div>

    <div class="row mt-4">
      <div class="col-12">
        <div class="row align-items-center category-search admin-form inventory-item-search justify-content-end mb-3"
          id="customer_pagination">
          <%#= render 'customer_pagination.html.erb'%>
        </div>
        <div class="admin-table bg-white table-responsive">
          <table class="table table-bordered mb-0">
            <thead class="thead-dark">
              <tr>
                <th class="text-center">User List</th>
                <th class="text-center">Primary Details</th>
                <th class="text-center">Action</th>
              </tr>
            </thead>
            <tbody class="customer_list">
              <%#= render 'customer_list'%>
            </tbody>
          </table>
          <br>
        </div>
      </div>
    </div>

  </div>
</section>
